<Window x:Class="AMONICAirlinesApp.Windows.ScheduleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMONICAirlinesApp.Windows"
        mc:Ignorable="d"
        Title="Schedule edit" 
        Height="300" Width="600"
        MinHeight="250" MinWidth="550"
        MaxHeight="400" MaxWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox Header="FlightRoute"
                  Margin="10"
                  BorderBrush="Black"
                  BorderThickness="2">

            <StackPanel Orientation="Horizontal">
                
                <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                    <TextBlock Text="From:"
                           Margin="10"/>
                    <TextBlock x:Name="TextBlockFrom"
                           Margin="10"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
            VerticalAlignment="Center">
                    <TextBlock Text="To:"
               Margin="10"/>
                    <TextBlock x:Name="TextBlockTo"
               Margin="10"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Aircraft:"
                               Margin="10"/>
                    <TextBlock x:Name="TextBlockAircraft"
                               Margin="10"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Date:"
                       Margin="10"/>
            <DatePicker x:Name="DatePickerDate"
                        Width="100"
                        Height="20" 
                        Margin="5"/>

            <TextBlock Text="Time:"
                       Margin="10"/>
            <TextBox x:Name="TextBoxTime"
                     Width="50"
                    Height="20" 
                    Margin="5"/>

            <TextBlock Text="EconomyPrice:"
                       Margin="10"/>
            <TextBox x:Name="TextBoxPrice"
                     Width="50"
                    Height="20" 
                    Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Grid.Row="2">
            <Button x:Name="ButtonUpdateSchedule"
                    Content="Update"
                    Width="100"
                    Height="20" 
                    Margin="10"
                    Click="ButtonUpdateSchedule_Click"/>

            <Button x:Name="ButtonCancel"
            Content="Cancel"
            Width="100"
            Height="20" 
            Margin="10"
                    Click="ButtonCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

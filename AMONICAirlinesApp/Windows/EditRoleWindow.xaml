<Window x:Class="AMONICAirlinesApp.Windows.EditRoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMONICAirlinesApp.Windows"
        mc:Ignorable="d"
        Title="Edit Role" Height="450" Width="600"
        MaxHeight="550" MaxWidth="700"
        MinHeight="350" MinWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="Email Address"
                   Margin="20"/>
            <TextBox x:Name="TextBoxEmail"
                     Width="200"
                     Margin="20"
                     IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
    HorizontalAlignment="Center"
    Orientation="Horizontal">
            <Label Content="First name"
           Margin="20"/>
            <TextBox x:Name="TextBoxFirstName"
             Width="200"
             Margin="20"
             IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
    HorizontalAlignment="Center"
    Orientation="Horizontal">
            <Label Content="Last name"
           Margin="20"/>
            <TextBox x:Name="TextBoxLastName"
             Width="200"
             Margin="20"
             IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Row="3"
HorizontalAlignment="Center"
Orientation="Horizontal">
            <Label Content="Office"
       Margin="20"/>
            <ComboBox x:Name="ComboBoxOffice"
         Width="200"
         Margin="20"
            IsEnabled="False"
            DisplayMemberPath="Title"/>
        </StackPanel>

        <StackPanel Grid.Row="4"
HorizontalAlignment="Center"
Orientation="Horizontal">
            <Label Content="Role"
       Margin="20"/>
            <StackPanel>
                <RadioButton x:Name="RadioButtonRoleUser"
                     GroupName="ChangeRoles"
                             Width="200"
                     Margin="10"
                     Content="User"/>
                <RadioButton x:Name="RadioButtonRoleAdmin"
                    GroupName="ChangeRoles"
                             Width="200"
                    Margin="10"
                    Content="Admin"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="5"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="ButtonApplyChanges" 
                    Content="Apply"
                    Width="100"
                    Margin="20"
                    Click="ButtonApplyChanges_Click"/>
            <Button x:Name="ButtonCancel" 
                    Content="Cancel"
                    Width="100"
                    Margin="20"
                    Click="ButtonCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

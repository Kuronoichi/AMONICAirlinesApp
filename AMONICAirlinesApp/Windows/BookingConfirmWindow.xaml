<Window x:Class="AMONICAirlinesApp.Windows.BookingConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMONICAirlinesApp.Windows"
        mc:Ignorable="d"
        Title="Billing confirmation" 
        Height="450" Width="300"
        MaxHeight="550" MaxWidth="400"
        MinHeight="350" MinWidth="250"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1"
            Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock Text="Total Amount:"/>
            <TextBlock x:Name="TextBlockTotalAmount"/>
        </StackPanel>
        <TextBlock Grid.Row="2"
            HorizontalAlignment="Center"
            Text="Paid using:"/>
        <StackPanel Grid.Row="3"
                    HorizontalAlignment="Center">
            <RadioButton Content="Credit Card"
                         GroupName="GroupPaid"
                         x:Name="RadioButtonCard"
                         IsChecked="True"/>
            <RadioButton Content="Cash"
                         GroupName="GroupPaid"
                         x:Name="RadioButtonCash"/>
            <RadioButton Content="Voucher"
                         GroupName="GroupPaid"
                         x:Name="RadioButtonVoucher"/>
        </StackPanel>
        <StackPanel Grid.Row="4"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="ButtonConfirm"
                    Width="100"
                    Height="30"
                    Content="Issue tickets" Click="ButtonConfirm_Click"/>
            <Button x:Name="ButtonExit"
                    Width="100"
                    Height="30"
                    Content="Cancel" Click="ButtonExit_Click"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="AMONICAirlinesApp.Windows.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMONICAirlinesApp.Windows"
        mc:Ignorable="d"
        Title="Booking confirmation" 
        Height="800" Width="800"
        MaxHeight="850" MaxWidth="900"
        MinHeight="750" MinWidth="700">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0"
                  Header="Outbound Flight Details"
                  Margin="5">
            <StackPanel 
                Orientation="Horizontal">
                <TextBlock Text="From:"
                       />
                <TextBlock x:Name="TextBlockOutFrom"
                       />

                <TextBlock Text="To:"
                           />
                <TextBlock x:Name="TextBlockOutTo"
                           />

                <TextBlock Text="Cabin Type:"
                           />
                <TextBlock x:Name="TextBlockOutCabinType"
                           />

                <TextBlock Text="Date: "
                           />
                <TextBlock x:Name="TextBlockOutDate"
                           />

                <TextBlock Text="Flight number: "
                           />
                <TextBlock x:Name="TextBlockOutFlightNumber"
                           />
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1"
          Header="Return Flight Details"
          Margin="5"
                  x:Name="GroupBoxReturn">
                <StackPanel 
        Orientation="Horizontal">
                    <TextBlock Text="From:"
               />
                    <TextBlock x:Name="TextBlockRetFrom"
               />

                    <TextBlock Text="To:"
                   />
                    <TextBlock x:Name="TextBlockRetTo"
                   />

                    <TextBlock Text="Cabin Type:"
                   />
                    <TextBlock x:Name="TextBlockRetCabinType"
                   />

                    <TextBlock Text="Date: "
                />
                    <TextBlock x:Name="TextBlockRetDate"
                   />

                    <TextBlock Text="Flight number: "
                   />
                    <TextBlock x:Name="TextBlockRetFlightNumber"
                   />
                </StackPanel>
            </GroupBox>

        <GroupBox Header="PassengerDetails"
                    Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal"
                            Margin="5"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Firstname"/>
                    <TextBox x:Name="TextBoxFisrtname"
                             Width="150"
                             MaxLength="30"/>
                    <TextBlock Text="Lastname"/>
                    <TextBox x:Name="TextBoxLastname"
                             Width="150"
                             MaxLength="30"/>
                    <TextBlock Text="Birthdate"/>
                    <DatePicker x:Name="DatePickerBirthDate"
                                Width="150"
                                Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="5"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Passport number"/>
                    <TextBox x:Name="TextBoxPassport"
                             Width="150"
                             MaxLength="30"/>

                    <TextBlock Text="Passport country"/>
                    <ComboBox x:Name="ComboBoxPassportCountry"
                              Width="150"
                              Margin="5"
                              DisplayMemberPath="Name"/>

                    <TextBlock Text="Phone"/>
                    <TextBox x:Name="TextBoxPhone"
                             Width="150"/>
                </StackPanel>

                <Button x:Name="ButtonAddPassenger"
                        HorizontalAlignment="Right"
                        Margin="10"
                        Width="150"
                        Height="30"
                        Content="Add Passenger" Click="ButtonAddPassenger_Click"/>
            </StackPanel>
        </GroupBox>

        <TextBlock Text="Passengers list"
                   Grid.Row="3"/>

        <DataGrid x:Name="DataGridPassengers"
                    AutoGenerateColumns="False"
CanUserAddRows="False"
CanUserDeleteRows="False"
CanUserReorderColumns="False"
CanUserResizeColumns="False"  
CanUserResizeRows="False"
CanUserSortColumns="False"
                  Grid.Row="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="FirstName"
                                    Width="*"
                                    Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="LastName"
                                    Width="*"
                                    Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Birthdate"
                                    Width="*"
                                    Binding="{Binding BirthDate}"/>
                <DataGridTextColumn Header="Passport Number"
                                    Width="2*"
                                    Binding="{Binding PassportNumber}"/>
                <DataGridTextColumn Header="Passport Country"
                                    Width="2*"
                                    Binding="{Binding PassportCountry}"/>
                <DataGridTextColumn Header="Phone Number"
                                    Width="2*"
                                    Binding="{Binding Phone}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="ButtonRemovePassenger"
                Grid.Row="5"
                Width="150"
                Height="30"
                Margin="10"
                HorizontalAlignment="Right"
                Content="Remove passenger" Click="ButtonRemovePassenger_Click"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="6"
                    HorizontalAlignment="Center">
            <Button x:Name="ButtonBack"
                Grid.Row="5"
                Width="150"
                Height="30"
                Margin="10"
                HorizontalAlignment="Right"
                Content="Back to search for flights" Click="ButtonBack_Click"/>

            <Button x:Name="ButtonConfirm"
                Grid.Row="5"
                Width="150"
                Height="30"
                Margin="10"
                HorizontalAlignment="Right"
                Content="Confirm booking" Click="ButtonConfirm_Click"/>
        </StackPanel>
        
    </Grid>
</Window>

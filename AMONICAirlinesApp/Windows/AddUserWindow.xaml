<Window x:Class="AMONICAirlinesApp.Windows.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMONICAirlinesApp.Windows"
        mc:Ignorable="d"
        Title="Add User" Height="450" Width="600"
        MaxHeight="550" MaxWidth="700"
        MinHeight="350" MinWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
            HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Margin="10"
            Content="Email Address"/>

        <Label Grid.Row="1"
    HorizontalAlignment="Right"
       VerticalAlignment="Center"
               Margin="10"
    Content="First name"/>

        <Label Grid.Row="2"
    HorizontalAlignment="Right"
       VerticalAlignment="Center"
               Margin="10"
    Content="Last name"/>

        <Label Grid.Row="3"
    HorizontalAlignment="Right"
       VerticalAlignment="Center"
               Margin="10"
    Content="Office"/>

        <Label Grid.Row="4"
    HorizontalAlignment="Right"
       VerticalAlignment="Center"
               Margin="10"
    Content="Birthday"/>

        <Label Grid.Row="5"
    HorizontalAlignment="Right"
       VerticalAlignment="Center"
               Margin="10"
    Content="Password"/>

        <TextBox x:Name="TextBoxEmail"
            Grid.Row="0"
                 Grid.Column="1"
                 Width="300"
                 Margin="10"
                 HorizontalAlignment="Left"/>

        <TextBox x:Name="TextBoxFirstName"
    Grid.Row="1"
         Grid.Column="1"
         Width="300"
         Margin="10"
         HorizontalAlignment="Left"/>

        <TextBox x:Name="TextBoxLastName"
Grid.Row="2"
     Grid.Column="1"
     Width="300"
     Margin="10"
     HorizontalAlignment="Left"/>

        <ComboBox x:Name="ComboBoxOffices"
    Grid.Row="3"
     Grid.Column="1"
     Width="300"
     Margin="10"
     HorizontalAlignment="Left"
     DisplayMemberPath="Title"         
     SelectedIndex="0"/>
        <DatePicker x:Name="DatePickerBirthday"
Grid.Row="4"
     Grid.Column="1"
     Width="300"
     Margin="10"
     HorizontalAlignment="Left"/>

        <TextBox x:Name="TextBoxPassword"
Grid.Row="5"
     Grid.Column="1"
     Width="300"
     Margin="10"
     HorizontalAlignment="Left"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="6"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center">
            <Button x:Name="ButtonSave"
                    Content="Save"
                    Width="100"
                    Margin="30"
                    Click="ButtonSave_Click"/>
            <Button x:Name="ButtonCancel"
                    Content="Cancel"
                    Width="100"
                    Margin="30"
                    Click="ButtonCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

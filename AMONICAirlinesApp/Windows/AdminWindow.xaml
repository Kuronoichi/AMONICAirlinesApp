<Window x:Class="AMONICAirlinesApp.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMONICAirlinesApp.Windows"
        mc:Ignorable="d"
        Title="AMONIC Airlines Automation system"
        Height="450" Width="800"
        MaxHeight="550" MaxWidth="900"
        MinHeight="350" MinWidth="700"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu VerticalAlignment="Top">
            <MenuItem x:Name="MenuItemAddUser"
                Header="Add user"
                      Click="MenuItemAddUser_Click"/>
            <MenuItem x:Name="MenuItemExit"
                Header="Exit"
                      Click="MenuItemExit_Click"/>
        </Menu>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <TextBlock Text="Office: "
                       Margin="10"
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="ComboboxOfficeFilter"
                      Margin="10"
                      Width="100"
                      DisplayMemberPath="Title"
                      SelectionChanged="ComboboxOfficeFilter_SelectionChanged"/>
        </StackPanel>

        <DataGrid x:Name="DataGridUsers"
                  Grid.Row="2"
                  Margin="10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False"  
                  CanUserResizeRows="False"
                  CanUserSortColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" 
                                    Binding="{Binding FirstName}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Last Name"
                                    Binding="{Binding LastName}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Age"
                                    Binding="{Binding Age}"
                                    Width="*"/>
                <DataGridTextColumn Header="User Role"
                                    Binding="{Binding RoleName}"
                                    Width="3*"/>
                <DataGridTextColumn Header="Email Address"
                                    Binding="{Binding Email}"
                                    Width="5*"/>
                <DataGridTextColumn Header="Office"
                                    Binding="{Binding OfficeName}"
                                    Width="2*"/>
            </DataGrid.Columns>
            <DataGrid.Resources>
              <Style TargetType="DataGridRow">
                <Style.Triggers>
                        <DataTrigger Binding="{Binding RoleID}" Value="1">
                            <Setter Property="Background" Value="{StaticResource DarkGreen}"/>
                        </DataTrigger>
                    <DataTrigger Binding="{Binding Active}" Value="False">
                        <Setter Property="Background" Value="Red"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>  
            </DataGrid.Resources>
            
        </DataGrid>
        
        <StackPanel Grid.Row="3" 
                        Orientation="Horizontal">
            <Button Content="Change Role"
                x:Name="ButtonChangeRole"
                Margin="10"
                    Padding="5"
                    Click="ButtonChangeRole_Click"/>
            <Button Content="Enable/Disable Login"
                x:Name="ButtonChangeLogin"
                Margin="50 10 10 10"
                Padding="5"
                    Click="ButtonChangeLogin_Click"/>
            <Button Content="Manage Schedule"
                    x:Name="ButtonSchedule"
                    Margin="10"
                    Padding="5"
                    Click="ButtonSchedule_Click"/>
            <Button Content="Manage flights"
                    x:Name="ButtonFlights"
                    Margin="10"
                    Padding="5"
                    Click="ButtonFlights_Click"/>
        </StackPanel>
    </Grid>
</Window>

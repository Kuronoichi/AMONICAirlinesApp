<Application x:Class="AMONICAirlinesApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AMONICAirlinesApp"
             StartupUri="Windows/LoginWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="Blue" Color="#196AA6"/>
        <SolidColorBrush x:Key="Orange" Color="#F79420"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#064B66"/>
        <SolidColorBrush x:Key="LightBlue" Color="#00A0BB"/>
        <SolidColorBrush x:Key="DarkGreen" Color="#0D4F4C"/>
        <SolidColorBrush x:Key="DarkPurple" Color="#132B4F"/>
        <SolidColorBrush x:Key="DarkGold" Color="#C2912E"/>
        <SolidColorBrush x:Key="Yellow" Color="#FAC826"/>
        <SolidColorBrush x:Key="LightGold" Color="#EDD688"/>
        <SolidColorBrush x:Key="LightYellow" Color="#FFFACB"/>

        <FontFamily x:Key="VerdanaRegular">
            pack://application:,,,/AMONICAirlinesApp;component/Fonts/verdana.ttf#Verdana
        </FontFamily>

        <Style TargetType="Button">
            <Setter Property="FontFamily"
                    Value="{StaticResource VerdanaRegular}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily"
            Value="{StaticResource VerdanaRegular}"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily"
            Value="{StaticResource VerdanaRegular}"/>
        </Style>

    </Application.Resources>
</Application>
